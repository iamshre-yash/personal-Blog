---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

import BlogCard from "../components/Blog/BlogCard.astro";
const posts = (await Astro.glob("./blog/*.{md,mdx}")).sort(
  (a, b) =>
    new Date(b.frontmatter.pubDate).valueOf() -
    new Date(a.frontmatter.pubDate).valueOf()
);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title="ShreYash - technology" description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <section>
        <h2
          class="mx-auto max-w-7xl px-4 pt-[90px] text-2xl font-bold tracking-wider sm:text-4xl"
        >
          Technology
        </h2>
        <ul
          class="row-gap-5 mx-auto grid max-w-7xl gap-8 py-10 px-4 lg:grid-cols-3"
        >
          {
            posts.map((post, index) => (
              <>
                {post.frontmatter.category === "technology" && (
                  <li>
                    <BlogCard post={post} />
                  </li>
                )}
              </>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
