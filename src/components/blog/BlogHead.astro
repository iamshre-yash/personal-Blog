---
export interface Props {
  title: string;
  description: string;
  pubDate?: string;
  cover_image?: string;
  author?: string;
  authorImg?: string;
  authorLink?: string;
}

const {
  title,
  description,
  pubDate,
  cover_image,
  author,
  authorImg,
  authorLink,
