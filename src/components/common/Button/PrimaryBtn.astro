---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, title, class: className } = Astro.props;
---

<a class:list={[className, "primaryBtn"]} href={href}>{title}</a>

<style>
  .primaryBtn {
    @apply rounded-lg bg-primary-500 py-2 px-6 text-sm font-bold text-white transition duration-200 hover:bg-primary-600;
  }
</style>
