---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}
const { href, title, class: className } = Astro.props;
---

<a
  class:list={[
    className,
    "group relative inline-block text-sm font-medium text-white focus:outline-none focus:ring",
  ]}
  href={href}
>
  <span
    class="absolute inset-0 border border-blue-600 group-active:border-blue-500"
  ></span>
  <span
    class="block border border-blue-600 bg-blue-600 px-6 py-2 transition-transform active:border-blue-500 active:bg-blue-500 group-hover:-translate-x-1 group-hover:-translate-y-1"
  >
    {title}
  </span>
</a>
